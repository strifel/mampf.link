@page "/group/{GroupSlug}/finance"

@using GroupOrder.Components.Layout
@using GroupOrder.Data
@using GroupOrder.Services.Common
@rendermode InteractiveServer

@layout AppLayout

@inject NavigationManager nm
@inject IGroupService gs
@inject IAdminService adminService

<PageTitle>Mampf.Link @gs.Group?.GroupName Finances</PageTitle>

@if (gs.Group != null && adminService.IsAdmin())
{
    <h1>Finance Overview: @gs.Group?.GroupName</h1>
    

    <table class="table">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Payment Status
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (Order order in gs.Group!.Orders)
        {
            <tr>
                <td>
                    @order.Person.Name
                </td>
                <td>
                    @order.GetPrice()â‚¬
                </td>
                <td style="padding-top: 3px; padding-bottom: 0">
                    <InputSelect class="form-select form-select-sm" style="max-width: 200px" @bind-Value="@order.PaymentStatus">
                        <option value="@PaymentStatus.Unpaid">Unpaid</option>
                        <option value="@PaymentStatus.PaymentPending">Payment Pending</option>
                        <option value="@PaymentStatus.Paid">Paid</option>
                    </InputSelect>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <button class="btn btn-secondary" @onclick="Reload">Reload</button>
    <button class="btn btn-primary" @onclick="Save">Save changes</button>
}
else
{
    <h2>Go back to <a href="/group/@gs.Group?.GroupSlug">the My Order Page</a></h2>
}

@code {
    [Parameter]
    public string? GroupSlug { get; set; }

    private async void Save()
    {
        await gs.Save();
        await gs.ReloadGroup();
        StateHasChanged();
    }

    private async void Reload()
    {
        await gs.ReloadGroup();
        StateHasChanged();
    }
    
}
